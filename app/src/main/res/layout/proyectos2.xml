<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26C6DA">

    <!-- â­ NOMBRE DEL PROYECTO (BANDA BLANCA) -->
    <TextView
        android:id="@+id/txtNombreProyecto"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="Nombre del Proyecto"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- â­ TARJETA BLANCA CENTRAL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTarea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtNombreProyecto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- ðŸ”´ FECHAS -->
            <LinearLayout
                android:id="@+id/layoutFechasUsuarios"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">


            <ImageView
                    android:src="@drawable/warning"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/txtFechasTarea"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 nov - 10 nov, 16:00"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:id="@+id/layoutUsuarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>


            </LinearLayout>

            <!-- ðŸ”µ LÃNEAS NEGRAS = DESCRIPCIÃ“N -->
            <View
                android:id="@+id/lineaDescripcion1"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp" />

            <View
                android:id="@+id/lineaDescripcion2"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <!-- DESCRIPCIÃ“N -->
                <TextView
                    android:id="@+id/txtDescripcionTarea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DescripciÃ³n de la tarea"
                    android:textSize="16sp" />

                <!-- ESTADO -->

            </LinearLayout>


            <!-- ðŸ”µ LISTA DE TAREAS -->
            <RadioGroup
                android:id="@+id/layoutRadioTareas"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layoutSubtareas"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />


            <!-- ðŸ“… MINI CALENDARIO DINÃMICO -->
            <LinearLayout
                android:id="@+id/minicalendario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/txtMiniCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fecha_tarea"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtMiniColendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fecha_tarea"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDescripcionTareaSeleccionada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DescripciÃ³n de la tarea"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:visibility="gone"/>

            </LinearLayout>



            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="20dp"
                android:src="@drawable/ajustes" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/boton_bottom"
        layout="@layout/boton_bottom"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

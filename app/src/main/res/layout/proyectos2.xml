<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBeatrix">

    <!-- â­ NOMBRE DEL PROYECTO (BANDA BLANCA) -->
    <TextView
        android:id="@+id/txtNombreProyecto"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:text="Nombre del Proyecto"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- â­ TARJETA BLANCA CENTRAL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTarea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtNombreProyecto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">



            <!-- ðŸ”´ FECHAS + USUARIOS IMPLICADOS -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/warning"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/txtFechasTarea"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 nov - 10 nov, 16:00" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Usuarios implicados" />

                <!-- â­ avatar genÃ©rico -->
                <ImageView
                    android:src="@drawable/avatarejemplo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- ðŸ”µ LÃNEAS NEGRAS = DESCRIPCIÃ“N -->
            <View
                android:id="@+id/lineaDescripcion1"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp" />

            <View
                android:id="@+id/lineaDescripcion2"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txtDescripcionTarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n de la tarea"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <!-- ðŸ”µ LISTA DE TAREAS (CHECKBOX) -->
            <LinearLayout
                android:id="@+id/layoutCheckboxTareas"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:id="@+id/layoutSubtareas"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <!-- ðŸŸ£ CÃRCULO GRIS PARA FOTO CUSTOM -->
            <ImageView
                android:id="@+id/imgFotoUsuario"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/circle_gray"
                android:layout_gravity="center" />

            <!-- ðŸ“… MINI CALENDARIO DINÃMICO -->
            <LinearLayout
                android:id="@+id/minicalendario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/txtMiniCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calendario dinÃ¡mico aquÃ­"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ðŸŸ  ESTADO DE LA TAREA -->
            <TextView
                android:id="@+id/txtEstadoTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="En progreso"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_orange"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="20dp"
                android:layout_marginEnd="200dp"
                android:layout_marginBottom="348dp"
                android:src="@drawable/ajustes" />

            <Button
                android:id="@+id/btnSiguienteProyecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siguiente proyecto"
                android:layout_margin="12dp"
                app:layout_constraintTop_toBottomOf="@id/txtNombreProyecto"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

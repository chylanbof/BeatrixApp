<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/popup_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/btnFechaInicio"
        android:text="Seleccionar fecha de inicio"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btnFechaFin"
        android:text="Seleccionar fecha final"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btnAplicar"
        android:text="Aplicar cambio"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#0077FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

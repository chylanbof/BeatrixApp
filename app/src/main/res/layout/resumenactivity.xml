<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ðŸ” CONTENIDO SUPERIOR -->
    <LinearLayout
        android:id="@+id/contenidoResumen"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/boton_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ICONO ARRIBA DERECHA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imgResumen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_beatrix_mini"
                android:contentDescription="Icono resumen"/>
        </LinearLayout>

        <!-- TEXTO RESUMEN -->
        <TextView
            android:id="@+id/txtResumen"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- BARRA TEXTO -->
        <TextView
            android:id="@+id/txtBarra"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- GRÃFICO -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btnDescargarPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_descargar_pdf"
            android:layout_marginTop="16dp"
            android:backgroundTint="#26C6DA"
            android:textColor="@android:color/white"/>


    </LinearLayout>


    <include
        android:id="@+id/boton_bottom"
        layout="@layout/boton_bottom"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

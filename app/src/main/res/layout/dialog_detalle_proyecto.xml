<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nombre del proyecto -->
        <TextView
            android:id="@+id/tvNombreProyectoDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Proyecto"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <!-- Descripción del proyecto -->
        <TextView
            android:id="@+id/tvDescripcionProyectoDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del proyecto"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="12dp"/>

        <!-- Lista de tareas y subtareas -->
        <TextView
            android:id="@+id/tvTareasProyectoDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tareas y subtareas"
            android:textSize="14sp"
            android:textColor="#444444"/>
    </LinearLayout>

</ScrollView>



